<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.blizzard.com/wow/ui/ C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">
  
  <Script file="RangeDisplay.lua"/>
  
  <Frame name="RangeDisplayFrame" hidden="true" parent="UIParent" enableMouse="false" movable="true" frameStrata="BACKGROUND">
    <Size>
      <AbsDimension x="120" y="30"/>
    </Size>
    <Anchors>
      <Anchor point="CENTER"/>
    </Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture name="$parentBG">
          <Color r="0.0" g="0.0" b="0.0" a="0.33"/>
        </Texture>
      </Layer>
      <Layer level="OVERLAY">
        <!-- or outline="THICK"--> 
        <FontString name="$parentText" inherits="GameFontNormal" justifyH="CENTER" outline="NORMAL">
          <FontHeight>
            <AbsValue val="24"/>
          </FontHeight>
          <Anchors>
            <Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER">
              <Offset>
                <AbsDimension x="-1" y="0"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
      </Layer>
    </Layers> 
    <Scripts>
      <OnLoad> RangeDisplay:OnLoad() </OnLoad>
      <OnEvent> RangeDisplay:OnEvent(event, ...) </OnEvent>
      <OnMouseDown> this:StartMoving() </OnMouseDown>
      <OnMouseUp> this:StopMovingOrSizing() </OnMouseUp>
      <OnUpdate> RangeDisplay:OnUpdate(elapsed) </OnUpdate>
    </Scripts>
  </Frame>
</Ui>
